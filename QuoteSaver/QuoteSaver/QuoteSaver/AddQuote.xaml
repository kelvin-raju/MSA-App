<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoteSaver.AddQuote"
             Title="Add Quote">

  <StackLayout Orientation="Vertical">
    <Label Text="Add Quotoe:" HorizontalOptions="Start" />
    <Entry x:Name="quoteField" HorizontalOptions="FillAndExpand" TextColor="Black"
               Keyboard="Text" TextChanged="quote_TextChanged" />
    <Label Text="Author:" HorizontalOptions="Start" />
    <Entry x:Name="authorField" HorizontalOptions="FillAndExpand" TextColor="Black"
               Keyboard="Text" TextChanged="author_TextChanged" />

    <Button Text="Spell Checker" HorizontalOptions="FillAndExpand" Clicked="SpellCheckQuote" />
    <Button Text="Add Quote" HorizontalOptions="FillAndExpand" Clicked="addQuote" />
  </StackLayout>
</ContentPage>